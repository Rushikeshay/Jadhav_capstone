<div class="container py-4">
  <h1 class="h3 mb-4">All Days</h1>

  <% if @list_of_days.any? %>
    <div class="list-group mb-4">
      <% @list_of_days.each do |a_day| %>
        <a href="/days/<%= a_day.id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          <span><i class="fa-regular fa-calendar me-2 text-primary"></i><%= a_day.date&.strftime("%B %-d, %Y") || "Day ##{a_day.id}" %></span>
          <small class="text-muted">Trip #<%= a_day.trip_id %></small>
        </a>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No days yet.</p>
  <% end %>
</div>
