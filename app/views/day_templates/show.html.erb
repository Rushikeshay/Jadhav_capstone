<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <a href="/trips/<%= @the_day.trip_id %>" class="btn btn-outline-secondary btn-sm">
      <i class="fa-solid fa-arrow-left"></i> Back to Trip
    </a>
    <a href="/delete_day/<%= @the_day.id %>" class="btn btn-outline-danger btn-sm"
       onclick="return confirm('Delete this day?')">
      <i class="fa-solid fa-trash"></i> Delete Day
    </a>
  </div>

  <div class="row g-4">
    <%# Left Column: Activities List & Add Form %>
    <div class="col-lg-7">
      <h2 class="h4 mb-3">Activities</h2>

      <% if @the_day.activities.any? %>
        <div class="row g-3">
          <% @the_day.activities.each do |activity| %>
            <div class="col-md-6">
              <div class="card h-100 shadow-sm">
                <% if activity.photos.any? %>
                  <img src="<%= activity.photos.first.image %>" class="card-img-top"
                       style="height: 200px; object-fit: cover;" alt="<%= activity.name %>">
                <% elsif activity.picture.present? %>
                  <img src="<%= activity.picture %>" class="card-img-top"
                       style="height: 200px; object-fit: cover;" alt="<%= activity.name %>">
                <% else %>
                  <div class="bg-light text-center py-5 border-bottom">
                    <i class="fa-regular fa-image fa-3x text-muted"></i>
                  </div>
                <% end %>

                <div class="card-body">
                  <h5 class="card-title">
                    <a href="/activities/<%= activity.id %>" class="text-decoration-none text-primary">
                      <%= activity.name %>
                    </a>
                  </h5>
                  <% if activity.notes.present? %>
                    <p class="card-text text-muted small"><%= activity.notes %></p>
                  <% end %>
                </div>

                <% if activity.address.present? %>
                  <div class="card-footer bg-white border-top-0">
                    <small class="text-secondary">
                      <i class="fa-solid fa-location-dot me-1"></i><%= activity.address %>
                    </small>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">No activities added yet.</p>
      <% end %>

      <hr class="my-5">

      <h3 class="h5 mb-3">Add a New Activity</h3>
      <form action="/insert_activity" method="post" enctype="multipart/form-data">
        <input type="hidden" name="query_day_id" value="<%= @the_day.id %>">

        <div class="mb-3">
          <label for="name_box" class="form-label fw-bold">Activity Name</label>
          <input type="text" id="name_box" name="query_name"
                 class="form-control" placeholder="e.g. Eiffel Tower Visit" required>
        </div>

        <div class="mb-3">
          <label for="address_box" class="form-label fw-bold">Address / Location</label>
          <input type="text" id="address_box" name="query_address"
                 class="form-control" placeholder="123 Street Name">
        </div>

        <div class="mb-3">
          <label for="notes_box" class="form-label fw-bold">Notes</label>
          <textarea id="notes_box" name="query_notes" rows="3"
                    class="form-control" placeholder="Don't forget the tickets!"></textarea>
        </div>

        <div class="mb-3">
          <label for="picture_box" class="form-label fw-bold">Upload Picture</label>
          <input type="file" id="picture_box" name="query_picture" class="form-control">
        </div>

        <button type="submit" class="btn btn-success">
          <i class="fa-solid fa-plus"></i> Add Activity
        </button>
      </form>
    </div>

    <%# Right Column: Map & Journal %>
    <div class="col-lg-5">
      <%# Map Section %>
      <h3 class="h5 mb-3">Map</h3>
      <div
        class="rounded border mb-4"
        style="height: 400px;"
        data-controller="google-map"
        data-google-map-markers-value="<%= map_markers_json(@the_day.activities) %>"
        data-google-map-zoom-value="12">
      </div>

      <%# Journal Section %>
      <% existing_journal = Journal.find_by(day_id: @the_day.id, user_id: current_user.id) %>
      
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h3 class="h5 mb-0">Daily Reflection</h3>
        </div>
        <div class="card-body">
          <% if existing_journal.nil? %>
            <p class="text-muted small">Let AI analyze your day and help you reflect.</p>
            <form action="/insert_journal" method="post">
              <input type="hidden" name="query_day_id" value="<%= @the_day.id %>">
              <div class="d-grid">
                <button class="btn btn-outline-primary">
                  <i class="fa-solid fa-robot me-2"></i>Generate Questions
                </button>
              </div>
            </form>
          <% else %>
            <div class="mb-3">
              <p class="fw-bold mb-2 small text-primary uppercase">Reflect on these:</p>
              <ul class="ps-3 mb-3 small">
                <% existing_journal.ai_generated_questions.split("|").each do |question| %>
                  <li class="mb-2"><em><%= question %></em></li>
                <% end %>
              </ul>
            </div>

            <form action="/modify_journal/<%= existing_journal.id %>" method="post">
              <input type="hidden" name="query_day_id" value="<%= existing_journal.day_id %>">
              
              <div class="mb-3">
                <textarea name="query_response" id="journal_response" 
                          class="form-control" rows="8" 
                          placeholder="Your thoughts..."><%= existing_journal.response %></textarea>
              </div>

              <div class="d-grid">
                <button class="btn btn-success">Save Entry</button>
              </div>
            </form>

            <div class="mt-3 text-center">
              <a href="/delete_journal/<%= existing_journal.id %>" 
                 class="text-danger small text-decoration-none"
                 onclick="return confirm('Clear questions and entry?')">
                <i class="fa-solid fa-rotate-left me-1"></i>Reset Journal
              </a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
