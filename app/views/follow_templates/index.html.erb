<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0"><i class="fa-solid fa-users me-2 text-primary"></i>People</h1>
    <span class="text-muted">Discover travelers to follow</span>
  </div>

  <% if @list_of_users.any? %>
    <div class="row g-3">
      <% @list_of_users.each do |a_user| %>
        <div class="col-md-4 col-sm-6">
          <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center gap-3">
              <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center flex-shrink-0"
                   style="width:48px;height:48px;font-size:1.2rem;font-weight:bold;">
                <%= (a_user.first_name.presence || a_user.email).first.upcase %>
              </div>
              <div class="flex-grow-1 min-width-0">
                <div class="fw-semibold text-truncate">
                  <%= [a_user.first_name, a_user.last_name].compact.join(" ").presence || a_user.email %>
                </div>
                <div class="text-muted small text-truncate"><%= a_user.email %></div>
                <div class="text-muted small">
                  <%= a_user.trips.count %> trip<%= a_user.trips.count == 1 ? "" : "s" %>
                </div>
              </div>
              <div class="flex-shrink-0">
                <% if @following_ids.include?(a_user.id) %>
                  <a href="/unfollow_user/<%= @follow_map[a_user.id] %>"
                     class="btn btn-outline-secondary btn-sm">
                    <i class="fa-solid fa-user-minus me-1"></i>Unfollow
                  </a>
                <% else %>
                  <form action="/follow_user" method="post" class="d-inline">
                    <input type="hidden" name="query_followed_id" value="<%= a_user.id %>">
                    <button type="submit" class="btn btn-primary btn-sm">
                      <i class="fa-solid fa-user-plus me-1"></i>Follow
                    </button>
                  </form>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5 text-muted">
      <i class="fa-solid fa-users fa-3x mb-3 opacity-25"></i>
      <p>No other users yet. Invite friends to join!</p>
    </div>
  <% end %>
</div>
