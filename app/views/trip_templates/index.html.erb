<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">My Trips</h1>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      <h2 class="h5 mb-0">Start a New Adventure</h2>
    </div>
    <div class="card-body">
      <form action="/insert_trip" method="post">
        <div class="mb-3">
          <label for="title_box" class="form-label fw-bold">Trip Title</label>
          <input type="text" id="title_box" name="query_title" class="form-control"
                 placeholder="e.g. Paris Summer 2026" required>
        </div>
        <button type="submit" class="btn btn-primary">
          <i class="fa-solid fa-plus"></i> Create Trip
        </button>
      </form>
    </div>
  </div>

  <% if @list_of_trips.any? %>
    <div class="list-group">
      <% @list_of_trips.each do |a_trip| %>
        <a href="/trips/<%= a_trip.id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          <span><i class="fa-solid fa-plane me-2 text-primary"></i><%= a_trip.title.presence || "Trip ##{a_trip.id}" %></span>
          <small class="text-muted"><%= time_ago_in_words(a_trip.created_at) %> ago</small>
        </a>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No trips yet. Create your first one above!</p>
  <% end %>
</div>
