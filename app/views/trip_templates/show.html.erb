<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <a href="/trips" class="btn btn-outline-secondary btn-sm">
      <i class="fa-solid fa-arrow-left"></i> All Trips
    </a>
    <a href="/delete_trip/<%= @the_trip.id %>" class="btn btn-outline-danger btn-sm"
       onclick="return confirm('Delete this trip and all its days?')">
      <i class="fa-solid fa-trash"></i> Delete Trip
    </a>
  </div>

  <div class="row g-4">
    <%# Trip details + edit %>
    <div class="col-md-5">
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
          <h1 class="h5 mb-0"><%= @the_trip.title.presence || "Trip ##{@the_trip.id}" %></h1>
        </div>
        <div class="card-body">
          <dl class="row mb-0">
            <dt class="col-sm-4">Created</dt>
            <dd class="col-sm-8 text-muted"><%= time_ago_in_words(@the_trip.created_at) %> ago</dd>
            <dt class="col-sm-4">Updated</dt>
            <dd class="col-sm-8 text-muted"><%= time_ago_in_words(@the_trip.updated_at) %> ago</dd>
          </dl>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-header">
          <h2 class="h6 mb-0">Edit Trip</h2>
        </div>
        <div class="card-body">
          <% if @the_trip.cover_image.present? %>
            <img src="<%= @the_trip.cover_image.url %>" alt="Cover"
                 class="img-fluid rounded mb-3" style="max-height:180px;object-fit:cover;width:100%;">
          <% end %>
          <form action="/modify_trip/<%= @the_trip.id %>" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="title_box" class="form-label fw-bold">Title</label>
              <input type="text" id="title_box" name="query_title"
                     value="<%= @the_trip.title %>" class="form-control">
            </div>
            <div class="mb-3">
              <label class="form-label fw-bold">Cover Photo</label>
              <input type="file" name="cover_image" accept="image/*" class="form-control">
              <% if @the_trip.cover_image.present? %>
                <div class="form-text text-muted">Upload a new image to replace the current one.</div>
              <% end %>
            </div>
            <button type="submit" class="btn btn-success">Update Trip</button>
          </form>
        </div>
      </div>
    </div>

    <%# Days list + add day %>
    <div class="col-md-7">
      <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h2 class="h6 mb-0">Days</h2>
        </div>
        <div class="card-body p-0">
          <% if @the_trip.days.any? %>
            <div class="list-group list-group-flush">
              <% @the_trip.days.order(:date).each do |day| %>
                <a href="/days/<%= day.id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                  <span><i class="fa-regular fa-calendar me-2 text-primary"></i><%= day.date&.strftime("%B %-d, %Y") || "Day ##{day.id}" %></span>
                  <span class="badge bg-secondary rounded-pill"><%= day.activities.count %> activities</span>
                </a>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted p-3 mb-0">No days added yet.</p>
          <% end %>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-header">
          <h3 class="h6 mb-0">Add a Day</h3>
        </div>
        <div class="card-body">
          <form action="/insert_day" method="post">
            <input type="hidden" name="query_trip_id" value="<%= @the_trip.id %>">
            <div class="mb-3">
              <label for="date_box" class="form-label fw-bold">Date</label>
              <input type="date" id="date_box" name="query_date" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">
              <i class="fa-solid fa-plus"></i> Add Day
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
